<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" />

    <!-- Base AppCompat theme for compatibility -->
    <style name="AppCompatSplashTheme" parent="Theme.AppCompat.NoActionBar" />

    <!-- Splash theme that combines AppCompat and SplashScreen -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/yalla_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <!-- Include AppCompat theme attributes -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
